#define ADC_BASE	0x4001_2000UL
#define ADC_CR1     (*(volatile uint32_t*)(ADC_BASE + 0x04))

int main(void)
{
	uint32_t *addrCR1 = (uint32_t*) ADC_CR1_REG_ADDR;
	for(;;);
}

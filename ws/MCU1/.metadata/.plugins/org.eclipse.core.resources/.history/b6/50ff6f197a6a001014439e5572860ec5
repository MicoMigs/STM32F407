/**
 ******************************************************************************
 * @file           : main.c
 * @author         : Mico Santiago
 * @brief          : How to use the peripheral clock
 ******************************************************************************
 *
 ******************************************************************************
 */

#define ADC_BASE	0x40012000UL
#define ADC_CR1     (*(volatile uint32_t*)(ADC_BASE + 0x04))

int main(void)
{

	ADC_CR1 |= (1 << 8);

	for(;;);
}
